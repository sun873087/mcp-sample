    "version": "0.2.0",
    "configurations": [        
        {
            "name": "MCP Client & SSE Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/client/client.py",
            "console": "integratedTerminal",            
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/client"
            },
            "preLaunchTask": "start-sse-server"
        },
        {
            "name": "SSE Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/client/client.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/client"
            }
        },
        {
            "name": "MCP SSE Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/servers/weather/sse/mcp-weather.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/servers/weather"
            }
        }
    ]
}